<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SuperActionBar">

        <attr name="super.action.bar.style">
            <enum name="title_only" value="0x01" />
            <enum name="title_left_img" value="0x02" />
            <enum name="title_right_img" value="0x03" />
            <enum name="title_both_img" value="0x04" />
            <enum name="title_left_txt" value="0x05" />
            <enum name="title_right_txt" value="0x06" />
            <enum name="title_both_txt" value="0x07" />
            <enum name="title_left_img_right_txt" value="0x08" />
            <enum name="title_left_txt_right_img" value="0x09" />
        </attr>

        <attr name="super.action.bar.left.text" format="string" />
        <attr name="super.action.bar.right.text" format="string" />
        <attr name="super.action.bar.title.text" format="string" />

        <attr name="super.action.bar.left.img" format="reference" />
        <attr name="super.action.bar.right.img" format="reference" />

        <attr name="super.action.bar.left.textColor" format="color" />
        <attr name="super.action.bar.right.textColor" format="color" />
        <attr name="super.action.bar.title.textColor" format="color" />

        <attr name="super.action.bar.left.textSize" format="dimension" />
        <attr name="super.action.bar.right.textSize" format="dimension" />
        <attr name="super.action.bar.title.textSize" format="dimension" />

        <attr name="super.action.bar.background" format="reference|color" />

    </declare-styleable>

</resources>